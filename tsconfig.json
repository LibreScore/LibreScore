{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "jsx": "preserve",
        "noImplicitThis": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "baseUrl": ".",
        "types": [
            "webpack-env",
            "jest"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
    },
    "include": [
        "src/**/*",
        "src/**/*.vue",
        "tests/**/*",
        "*.js",
    ],
    "exclude": [
        "node_modules"
    ]
}